  font-size: 14px;
  line-height: 22px;
  color: $dsm-black;

.b-wrapper
  max-width: 1300px;
  margin: 0px auto;
  box-sizing: border-box;
  position:relative;

.b-wrapper__item
  width: 1007px;
  margin: 0px auto;
  position: relative;

.b-wrapper__item_footer
  padding: 60px 49px 60px 68px;
