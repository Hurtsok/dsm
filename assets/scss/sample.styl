.b-menu
  display: block;
  margin: 0px;
  padding: 0px;
  font-size: 16px;
  line-height: 28px;
  cf()

.b-menu_theme_not-main
  font-size: 14px;
  line-height: 32px;

.b-menu_sub
  width: 210px;
  height: 0px;
  display: none;
  box-sizing: border-box;
  padding: 8px 0px;
  background: #ffffff;
  position: absolute;
  top: 46px;
  left: 0px;
  font-size: 14px;
  line-height: 22px;

  .b-menu__item
    float: none;
    margin-right: 0px;
    margin-bottom: 0px;
    padding: 9px 23px;

  .b-menu_sub_third
    .b-menu__item_active > .b-link
      color: $dsm-black;

.b-menu.b-menu_sub .b-menu__arrow
  background-position: -23px -2px;


.b-menu.b-menu_sub .b-menu__item_js_hover:after
.b-menu.b-menu_sub .b-menu__item_active:after
  display: none !important;

.b-menu.b-menu_sub .b-menu__item_js_hover-ext .b-menu__arrow
    background-position: -34px -2px;

.dsm-notouch .b-menu_sub .b-menu__item:hover
.dsm-touch .b-menu_sub .b-menu__item:active
.b-menu_sub .b-menu__item_active
  background: #e2e2e2;

.b-menu_theme_left
  width: 200px;
  float: left;
  padding: 287px 0px 0px 0px;
  margin: 0px 20px 0px 68px;

  .b-menu__item
    float: none;
    font-size: 14px;
    margin-right: 0px;
    padding-bottom: 10px;

  .b-menu__arrow
    background-position: -23px -2px;

  .b-menu_sub
    display: block;
    left: 0px;
    top: 0px;
    padding: 20px 0px 0px 20px;
    position: relative;
    height: auto;

    .b-menu__item:last-child
      padding-bottom: 0px;

    .b-menu__item_active
      background: none;

      > .b-link
        color: $dsm-black;

    .b-menu__item
      padding: 0px 0px 20px 0px;
      color: $dsm-black;


.dsm-notouch .b-menu_theme_left .b-menu_sub .b-menu__item:hover
.dsm-touch .b-menu_theme_left .b-menu_sub .b-menu__item:active
  background: none;

.dsm-notouch .b-menu_theme_left .b-menu__item:hover .b-menu__arrow
.dsm-touch .b-menu_theme_left .b-menu__item:active .b-menu__arrow
.b-menu_theme_left .b-menu__item_active .b-menu__arrow
  background-position: -34px -2px;

.b-menu_theme_left .b-menu__item_active > .b-link
  color: #e40000

.b-menu_sub_third
  left: 210px;
  top: 0px;
  background: #e2e2e2;

.b-menu__item
  position: relative;
  display: block;
  float: left;
  margin-right: 44px;
  padding-bottom: 20px;
  cursor: pointer;

  &:last-child
    margin-right: 0px;

.b-menu__item:after
  content: '';
  width: 0px;
  height: 2px;
  background: #ffffff;
  position: absolute;
  bottom: 0px;
  left: 60%;
  transition: all 200ms ease-in;

.b-menu__arrow
  svgIcons()
  background-position: -1px -2px;
  width: 9px;
  height: 5px;
  display: inline-block;
  margin-left: 5px;
  position: relative;
  bottom: 1px;

.b-menu__item_js_hover:after
.b-menu__item_active:after
  content: '';
  width: 100%;
  height: 2px;
  background: #ffffff;
  position: absolute;
  bottom: 0px;
  left: 0px;

.b-menu__item_active
  cursor: inherit;

  .b-link_theme_menu
    opacity: 1;

.b-menu__item_js_hover .b-menu__arrow
.b-menu__item_active .b-menu__arrow
  background-position: -12px -2px;

.b-menu__address
  float: right;
  display: block;
  text-align: right;
  margin-right: 68px;

.b-menu__phone
  color: #ffffff;

.b-menu__email
  font-size: 14px;
  line-height: 20px;

.b-link
  text-decoration: none;
  color: $dsm-blue-light;

.dsm-notouch .b-link:hover
.dsm-touch .b-link:active
  color: $dsm-red;

.b-link_type_dev
  color: #a4e0ff;

.dsm-notouch .b-link_type_dev:hover
.dsm-touch .b-link_type_dev:active
  color: #ffffff;

.b-link_theme_menu
  color: #ffffff;
  opacity: 0.7;

.dsm-notouch .b-link_theme_menu:hover
.dsm-touch .b-link_theme_menu:active
.b-menu__item_js_hover .b-link_theme_menu
  color: #ffffff;
  opacity: 1;

.b-link_block
  display: block;

.b-logo
  svgIcons()
  width: 206px;
