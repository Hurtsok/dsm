.b-content
  width: 100%;
  padding: 287px 0px 0px 0px;
  width: 640px;
  float: left;
  box-sizing: border-box;
  cf()

.b-content_main
  padding: 607px 68px 0px;
  box-sizing: border-box;
  width: 995px;
  float: none;


.b-info__item
  width: 400px;
  box-sizing: border-box;
  float: left;
  margin-right: 55px;
  margin-bottom: 40px;

  &:nth-child(2)
  &:nth-child(4)
    margin-right: 0px;

.b-info
  font-size: 14px;
  line-height: 22px;
  cf()

.b-info__ico
  display: block;
  color: $dsm-blue-dark;
  font-size: 22px;
  line-height: 28px;
  margin-bottom: 20px;

.b-info__ico:before
  svgIcons();
  content: '';
  display: inline-block;
  background-position: 0px -147px;
  width: 70px;
  height: 59px;
  line-height: 1;
  margin-right: 25px;
  vertical-align: middle

.b-info__ico-text
  display: inline-block;
  width: 75%;
  vertical-align: middle;

.b-info__ico_type_hands:before
  background-position: -72px -147px;

.b-info__ico_type_hand-ok:before
  background-position: -144px -147px;
  height: 61px;

.b-info__ico_type_hand-time:before
  background-position: -216px -152px;

.b-title
  font-weight: normal;
  padding: 0px;
  margin: 0px;
  display: block;

.b-title_type_h1
  font-size: 36px;
  line-height: 40px;
  margin-bottom: 30px;

.b-title_type_h2
  font-size: 30px;
  line-height: 40px;
  margin-bottom: 23px;

.b-title_type_h3
  font-size: 24px;
  line-height: 30px;
  margin-bottom: 23px;

.b-title_no-margin
  margin: 0px;

.b-title_label-border
  width: 275px;
  display: inline-block;
  margin: 0px auto;
  padding: 0px 15px;

.b-custom-title
  display: block;
  position: relative;
  margin-bottom: 45px;
  margin-top: 14px;

  &:before
  &:after
    content: '';
    display: inline-block;
    height: 2px;
    background: $dsm-gray;
    width: 272px;
    margin-bottom: 10px;

.b-scroll
  position: relative;
  cf()

.b-scroll_theme_gallery
  .b-scroll__item
    display: inline-block;
    vertical-align: top;
    float: none;
    margin-bottom: 38px;

    &:nth-child(3n)
      margin-right: 0px;


  .b-scroll__full-size
    &:before
      background-position: -82px -215px;

.b-scroll__item
  float: left;
  display: block;
  height: auto;
  margin-right: 20px;
  width: 200px;
  text-decoration: none;

  &:last-child
    margin-right: 0px;

.dsm-notouch .b-scroll__item:hover .b-scroll__text
.dsm-touch .b-scroll__item:active .b-scroll__text
  color: $dsm-red;

.dsm-notouch .b-scroll__item:hover .b-scroll__full-size:before
.dsm-touch .b-scroll__item:active .b-scroll__full-size:before
  transform: scale(1);

.dsm-notouch .b-scroll__item:hover .b-scroll__full-size
.dsm-touch .b-scroll__item:active .b-scroll__full-size
  background: rgba(0, 73, 134, 0.6);
  z-index: 1;

.b-scroll__image-item
  position: relative;

.b-scroll__text
  margin-top: 13px;
  transition: color 200ms ease;

.b-scroll__full-size
  background: rgba(0, 73, 134, 0);
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  transition: background 200ms ease;

  &:before
    content: '';
    svgIcons()
    background-position: 0px -215px;
    width: 80px;
    height: 101px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -50.5px;
    margin-left: -40px;
    transform: scale(0);
    transition: all 300ms cubic-bezier(0.600, 0.040, 0.980, 0.335);


.b-scroll__nav-left
.b-scroll__nav-right
  svgIcons()
  width: 18px;
  height 33px;
  cursor: pointer;
  position: absolute;
  top: 84px;
  z-index: 2;

.b-scroll__nav-left
  background-position: 0px -325px;
  left: -38px;

.b-scroll__nav-right
  background-position: -60px -325px;
  right: -38px;

.b-scroll__nav-right.slick-disabled
.b-scroll__nav-left.slick-disabled
  cursor: inherit;

.dsm-notouch .b-scroll__nav-right:hover
.dsm-touch .b-scroll__nav-right:active
  background-position: -40px -325px;

.dsm-notouch .b-scroll__nav-left:hover
.dsm-touch .b-scroll__nav-left:active
  background-position: -20px -325px;

.b-image
