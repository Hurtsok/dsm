    margin-left: 24px;
    vertical-align: middle;

.b-breadcrumb
  font-size: 12px;
  line-height: 20px;
  margin-bottom: 20px;

  .b-breadcrumb__item
    display: inline-block;

  .b-breadcrumb__item:nth-child(n + 2):before
    content: '/';
    color: $dsm-gray;
    display: inline-block;
    padding: 0px 5px;


.b-editable
  overflow: hidden;

  p
    margin: 0px 0px 22px 0px;
    padding: 0px;

  ul
  ol
    margin: 0px 0px 22px 0px;

  p+ul,
  p+ol
    margin-top: -22px;

  table
    margin-bottom: 37px;

    th
      font-weight: normal;
      text-align: left;
      border-bottom: 2px solid #0060b1;
      padding: 15px 0px;
    tr
      td
        border-bottom: 1px solid $dsm-gray;
        padding: 15px 10px;
        min-width: 90px;

      td:first-child
      th:first-child
        padding-left: 22px;

.b-clear
  cf()